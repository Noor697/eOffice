@page "/UserManagement"
<style>
	
	.bi{
		line-height:0;
	}
    /* Light shadow effect for the card */
    .card {
        border: 1px #e6e6e6; /* Light card border */
        border-radius: 8px; /* Smooth rounded edges */

    }

    .custom-table {
        border-spacing: 0 10px; /* Adds vertical spacing of 10px between rows */
        border-collapse: separate; /* Ensures spacing works */
    }

        .custom-table tbody tr {
            background-color: #f9f9f9; /* Light gray background for rows */
        }


   thead{
        border-top: thin solid;
        border-color:lightgray;
    }
  

    .custom-table th,
    .custom-table td {
        border: none; /* Removes borders around table cells */
    }

    .custom-table th{
        vertical-align: middle; /* Aligns content in the middle */
        text-align: left; /* Centers text horizontally */
    }
    /* Additional spacing for text inside rows */
    .custom-table td,
    .custom-table th {
        padding-top:10px;
        padding-bottom:10px;
    }

    label{
        font-size:14px;
    }
    .form-control{
        font-size:12px;
    }
    .form-select{
        color:dimgrey;
        font-size:12px;
    }

  .slide-right  .modal-dialog {
        position: fixed;
        margin: 0px;
        width: 400px;
        height: 100vh;
        right: 0px;
        border-radius: 12px;
        transition: transform 0.2s ease-in-out; /* Smooth slide-in effect */
    }

    .slide-right.show .modal-dialog {
        transform: translateX(0);
        right: 0; /* Fully visible */
    }
    .modal-content{
        height:100%;
    }
.modal-body{
    padding-top:0;
    padding-bottom:0;
}

    .modal-header {
        border-bottom: none;
    }
    .modal-footer{
        border-top:none;

    }

    .input-container {
        position: relative;
        display: inline-block;
        width: 400px;
    }

        .input-container input {
            width: 100%;
            padding: 10px 35px; /* Add padding to make space for the icon */
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .input-container .search-icon {
            position: absolute;
            left: 10px; /* Position icon inside the input field */
            top: 50%;
            transform: translateY(-50%);
            color: #888;
            font-size: 16px;
        }

    
</style>

<div class="text-primary">
	<h2>Employee List</h2>
	<h5>User Management<span class="bi bi-arrow-right"></span><b>Employee</b></h5>
</div>
<div class="card shadow-sm mt-3">
    <div class="card-body">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="input-container">
                <i class="bi bi-search search-icon"></i>
                <input type="text" placeholder="Search here...">
            </div>
            <!--Modal button-->
            <!-- Add New Button -->
            <button class="btn btn-primary" style="width:150px;" data-bs-toggle="modal" data-bs-target="#addUserModal">
                Add New
            </button>

            <!-- Modal Structure -->
            <div class="modal fade slide-right" id="addUserModal" aria-labelledby="addUserModalLabel" aria-hidden="true">
                <div class="modal-dialog ">
                    <div class="modal-content">
                        <!--header-->
                        <div class="modal-header">
                            <h6 class="modal-title text-primary" id="addUserModalLabel">Add new user</h6>
                            <button type="button" class="btn-close btn-sm" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Upload Image Section -->
                            <div class="text-center">
                                <label for="uploadImage" class="form-label">
                                    <div class="bg-light p-4 fw-bold " style="cursor: pointer;">
                                        <i class="bi bi-cloud-arrow-up h1"></i><br />
                                        <span>Upload Image</span>
                                    </div>
                                </label>
                                <input type="file" id="uploadImage" class="form-control d-none" />
                            </div>

                            <!-- Form Fields -->
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" id="name" class="form-control" placeholder="Lorem Ipsum" />
                                </div>
                                <div class="mb-3">
                                    <label for="phoneNumber" class="form-label">Phone Number</label>
                                    <input type="tel" id="phoneNumber" class="form-control" placeholder="+92**********" />
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" id="email" class="form-control" placeholder="demo@eoffice.com" />
                                </div>
                                <div class="mb-3 position-relative">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" id="password" class="form-control" placeholder="Enter your password" />
                                    <span class="position-absolute p-1 top-50 end-0  me-3">
                                        <i class="bi bi-eye" id="passwordIcon"></i>
                                    </span>

                                    
                                </div>
                                <div class="mb-3 position-relative">
                                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                                    <input type="password" id="confirmPassword" class="form-control" placeholder="Enter your password" />
                                    <span class="position-absolute p-1 top-50 end-0  me-3">
                                        <i class="bi bi-eye" id="passwordIcon"></i>
                                    </span>


                                </div>
                                <div>
                                    <label for="role" class="form-label">Role</label>
                                    <select id="role" class="form-select">
                                        <option selected>Select</option>
                                        <option value="1">Employee</option>
                                        <option value="2">Team Lead</option>
                                        <option value="3">Dept. Head</option>
                                    </select>
                                </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn border" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary">Add User</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Employee Table -->
        <div class="table-responsive">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" />
                        </th>
                        <th>NAME</th>
                        <th>EMAIL</th>
                        <th>ROLE</th>
                        <th>PHONE NO</th>
                        <th>STATUS</th>

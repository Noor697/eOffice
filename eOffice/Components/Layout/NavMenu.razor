@rendermode InteractiveServer
<div class="top-row  navbar">
    <div class="container-fluid  ">
        <a class="navbar-brand " href="">eOffice</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable bg-primary" onclick="document.querySelector('.navbar-toggler').click()">

    <nav class="nav flex-column">
        <!--Dashboard-->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-windows" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <!--Configuration -->
        <div class="nav-item px-3">
            <NavLink class="nav-link " href="Configuration" @onclick="() => isExpandSubmenu1 = !isExpandSubmenu1">
                <span class="bi bi-person-gear" aria-hidden="true"></span> Configuration
            </NavLink>
            @if (isExpandSubmenu1)
            {
                <!-- Submenu for Configuration -->           
                <ul class="submenu list ">
                    <li >
                    <NavLink class="nav-link" href="Departments">
                        <span class="bi bi-dash"></span> Departments
                    </NavLink>
                </li>
                <li>
                    <NavLink class="nav-link" href="Teams">
                        <span class="bi bi-dash"></span> Teams
                    </NavLink>
                </li>
            </ul>
            }
        </div>

        <!--UserManagement-->

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="UserManagement">
                <span class="bi bi-person-gear" aria-hidden="true"></span> User Management
            </NavLink>
        </div>

        <!--Project -->
        <div class="nav-item px-3">
            <NavLink class="nav-link " href="Project" @onclick="() => isExpandSubmenu2 = !isExpandSubmenu2">
                <span class="bi bi-person-gear" aria-hidden="true"></span> Project
            </NavLink>
            <!-- Submenu for Projects -->
            @if (isExpandSubmenu2)
            {
                <ul class="submenu list ">
                    <li>
                        <NavLink class="nav-link" href="Projects">
                            <span class="bi bi-dash"></span> Project
                        </NavLink>
                    </li>
                    <li>
                        <NavLink class="nav-link" href= "Task">
                            <span class="bi bi-dash"></span> Task
                        </NavLink>
                    </li>
                </ul>
            }
        </div>
    </nav>
</div>
@code{
    bool isExpandSubmenu1 = false;
    bool isExpandSubmenu2 = false;


}
